package aplicatico;

import java.util.Locale;
import java.util.Scanner;
import utilitarios.Conta;

public class Banco {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite o número da conta: ");
		int numConta = sc.nextInt();
		System.out.print("Digite o nome da conta: ");
		String nomeConta = sc.nextLine();
		System.out.print("Vai efetuar um depósito inicial? ");
		char respostaDeposito = sc.next().charAt(0);
		
		Conta cont1 = new Conta(numConta,nomeConta);
		
		double valor;
		if ("y".equals(respostaDeposito)) {
			System.out.print("Digite o valor do depósito: ");
			valor = sc.nextDouble();
			cont1.setSaldo(valor);
		}
		
		System.out.println();
		System.out.print("Digite o valor a ser adicionado ao seu saldo: ");
		
		sc.close();
	}

}
