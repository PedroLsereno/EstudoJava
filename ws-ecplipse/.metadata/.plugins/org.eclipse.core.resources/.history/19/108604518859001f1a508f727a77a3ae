package application;

import java.util.Locale;
import java.util.Scanner;
import entities.Produtos;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Ente com os valores: ");
		System.out.print("Nome: ");
		Produtos produto = new Produtos();
		produto.nome = sc.next();
		
		System.out.print("Preço: ");
		produto.preco = sc.nextDouble();
		
		System.out.print("Quantidade: ");
		produto.quantidade = sc.nextInt();
		
	
		System.out.printf("Nome do produto: %c, Preço do produto: %.2f, Quantidade no estoque: %s, Total: %.2f",produto.nome,produto.preco,produto.quantidade,produto.ValorTotalNoEstoque(0));
		
		sc.close();
	}

}
